@page
@model Webbanhoa.Pages.Shared.ShopModel
@{
}
@{
    var name = TempData["Name"] as string;
}
@section Name {
    @name
}
<style>
    .container-fluid {
        background-color: #F6D8DC;
        color: #9D1030;
        padding: 2vw 6vw 2vw 6vw;
    }

    .title {
        font-size: 4vw;
        color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .card-title {
        color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        padding: 1vw 0.5vw 1vw 0.5vw;
    }

    .shop {
        border-left: 0.2vw solid;
        border-color: #9D1030;
        padding: 2vw 4vw 2vw 4vw
    }

    .add-cart {
        display: flex;
    }

    .price {
        font-size: 1.5vw;
        color: #9D1030;
        font-family: Courier;
        padding-left: 0.5vw;
    }

    #card-products {
        padding: 2vw 2vw 2vw 2vw;
        background-color: #F6D8DC;
        border: none;
    }

</style>

<div class="container-fluid">
    <p class="title" style=" padding-left:2vw"> <b>OUR PRODUCTS</b></p>
    <div class="shop row">
        @foreach (var item in Model.listProducts) {
            <div id="card-products" class="card col-sm-6 col-md-4 col-lg-3">
                <img class="img" src="data:image/jpeg;base64, @item.Img" alt="Sheep" />
                <div class="card-body">
                    <h5 class="card-title"><b>@item.Name</b></h5>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: auto; bottom:0">
                        <div class="price">
                            @item.Price<p style="display:inline">$</p>
                        </div>
                        <div class="add-cart" style="margin-left: auto; right: 0; bottom: 0;">
                            <form method="post" asp-page-handler="AddToCart">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button type="submit" style="border: none; background-color: #F6D8DC;">
                                    <img src="/Picture/cart1.png" style="max-width: 15%; max-height: 15%; float: right;" />
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>