@page
@model HoaHoeHoaSoi.Pages.ADMIN.HomeAdminModel
@{
    Layout = "/Pages/Shared/_HomeAdminLayout.cshtml";
    ViewData["Title"] = "Admin Home";
}


<style>
    .img-wall {
        width: 100%;
        height: 100%;
        border-radius: 150px;
        filter: drop-shadow(0 0 5px black);
        padding: 1.1vw;
    }

    .img-wall-main {
        width: 100%;
        height: 100%;
        border-radius: 100px;
        filter: drop-shadow(0 0 5px black);
        position: relative;
    }

    div.relative {
        position: relative;
    }

    div.absolute {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 100px;
        background-color: rgba(255,255,255,0.7);
        backdrop-filter: blur(20%) contrast(50%);
    }

    .btn {
        filter: drop-shadow(0.3em 0.3em 0.3em black);
        border-radius: 30px;
        background-color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 1.6vw;
        border: none;
        padding: 1vw 1vw 1vw 1vw;
    }

</style>


<div class="container-fluid text-white" style="padding: 50px 50px; background-color: #F6D8DC ">
    <center>
        <div class="relative" style="width:80%; height:80%">
            <img class="img-wall-main" src="/Picture/wall.jpg" style="max-width: 100%; max-height: 100%" />
            <div class="absolute" style="width:100%; height:100%; top:0px">
                <center>
                    <p style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: #9D1030; font-size: 4vw; padding-top: 20%">
                        <b>PIPE CLEANER FLOWERS</b>
                    </p>
                    <p style="font-family: Courier; padding-bottom:2%; color:#9D1030; font-size:1vw">DIY gift made with pipe cleaners.</p>
                    <div style="margin-bottom: 20px;">
                        <a href="Product/Index" class="btn btn" style="color:white;">
                            <b>Manage Products</b>
                        </a>
                        <a href="Order/Index" class="btn btn" style="color:white;">
                                <b>Manage Orders</b>
                        </a>
                        <a href="Feedback/Index" class="btn btn" style="color:white;">
                            <b>Manage Feedbacks</b>
                        </a>
                    </div>
                </center>
            </div>
        </div>
    </center>
</div>












