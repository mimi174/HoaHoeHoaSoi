@page
@model HoaHoeHoaSoi.Pages.ADMIN.HomeAdminModel
@{
    ViewData["Title"] = "Admin Home";
}

@{
    var name = TempData["Name"] as string;
}
@section Name {
    @name
}
<style>
    .img-wall {
        width: 100%;
        height: 100%;
        border-radius: 150px;
        filter: drop-shadow(0 0 5px black);
        padding: 1.1vw;
    }

    .img-wall-main {
        width: 100%;
        height: 100%;
        border-radius: 100px;
        filter: drop-shadow(0 0 5px black);
        position: relative;
    }

    .div-img {
        float: none;
        text-align: center;
        display: inline;
        padding-top: 2vw;
        padding-bottom: 2vw
    }

    div.relative {
        position: relative;
    }

    div.absolute {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 100px;
        background-color: rgba(255,255,255,0.7);
        backdrop-filter: blur(20%) contrast(50%);
    }

    .btn-shop {
        filter: drop-shadow(0.3em 0.3em 0.3em black);
        border-radius: 30px;
        background-color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 1.6vw;
        border: none;
    }

    div.text-heading {
        position: relative;
    }

    div.div-img-wall {
        position: relative;
    }

    div.text-heading-wall {
        position: absolute;
    }

    .info-left {
        width: 60%;
    }

    .info-right {
        width: 40%;
    }

    .img-info {
        border-radius: 200px 200px 0px 0px;
        border: 0.8vw solid;
        border-color: #9D1030;
    }

    .text-box {
        width: 100%;
        font-family: Courier;
        font-size: 1.5vw;
        color: #9D1030;
        background-color: #F6D8DC;
        border-color: #9D1030;
        border: 0.3vw solid;
        border-radius: 100px;
        padding: 1vw 2vw 1vw 2vw;
    }

    .box-title {
        font-size: 2.5vw;
        color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        padding: 1vw;
    }

    .text-box-note {
        width: 100%;
        height: 26vw;
        font-family: Courier;
        font-size: 1.5vw;
        color: #9D1030;
        background-color: #F6D8DC;
        border-color: #9D1030;
        border: 0.3vw solid;
        border-radius: 80px;
        padding: 2vw 2vw 2vw 2vw;
        resize: none;
    }

    .info-left-note {
        width: 45%;
    }

    .info-right-note {
        width: 100%;
    }

    .form-container {
        display: flex;
    }

</style>


<div class="container-fluid text-white" style="padding: 50px 50px; background-color: #F6D8DC ">
    <center>
        <div class="relative" style="width:80%; height:80%">
            <img class="img-wall-main" src="/Picture/wall.jpg" style="max-width: 100%; max-height: 100%" />
            <div class="absolute" style="width:100%; height:100%; top:0px">
                <center>
                    <p style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: #9D1030; font-size: 4vw; padding-top: 20%">
                        <b>PIPE CLEANER FLOWERS</b>
                    </p>
                    <p style="font-family: Courier; padding-bottom:2%; color:#9D1030; font-size:1vw">DIY gift made with pipe cleaners.</p>
                    <div style="margin-bottom: 20px;">
                        <a href="Product/Index">
                            <button class="btn-shop" style="padding: 10px 50px 10px 50px; color:white; margin-right: 20px;">
                                <b>Manage Products</b>
                            </button>
                        </a>
                        <a href="#">
                            <button class="btn-shop" style="padding: 10px 50px 10px 50px; color:white; margin-right: 20px;">
                                <b>Manage Orders</b>
                            </button>
                        </a>
                        <a href="#">
                            <button class="btn-shop" style="padding: 10px 50px 10px 50px; color:white;">
                                <b>Manage Feedbacks</b>
                            </button>
                        </a>
                    </div>
                </center>
            </div>
        </div>
    </center>
</div>












