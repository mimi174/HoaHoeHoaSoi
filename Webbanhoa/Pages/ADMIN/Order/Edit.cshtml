@page "{eid}"
@model HoaHoeHoaSoi.Pages.ADMIN.Order.EditModel
@{
    Layout = "/Pages/Shared/_HomeAdminLayout.cshtml";
}

<style>
    .container-fluid {
        background-color: #F6D8DC;
        color: #9D1030;
        padding: 2vw 6vw 2vw 6vw;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .rounded-pill {
        border-radius: 20px;
    }

    .rounded {
        border-radius: 10px;
    }

    .btn {
        border-radius: 20px;
        padding: 10px 20px;
    }

    .btn-back {
        background-color: darkred;
        border-color: darkred;
        color: aliceblue;
    }

    .btn-update {
        background-color: darkred;
        border-color: darkred;
        color: white;
    }
</style>

<div class="container-fluid">
    @if (Model.OrderLineID == 0) {
        <h2>Order Line not found!</h2>
    } else {
        <form method="post">
            <input asp-for="OrderLineID" hidden />
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- Thêm lớp mx-auto để căn giữa -->
                    <div class="form-group">
                        <label asp-for="ProductName" class="font-weight-bold">Product Name</label>
                        <input asp-for="ProductName" class="form-control rounded-pill" placeholder="Enter product name" readonly />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="font-weight-bold">Price</label>
                        <input asp-for="Price" class="form-control rounded-pill" placeholder="Enter price" readonly />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="font-weight-bold">Quantity</label>
                        <input asp-for="Quantity" class="form-control rounded-pill" placeholder="Enter quantity" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 text-center">
                    <a href="/ADMIN/Order/Detail/@TempData["orderId"]" class="btn btn-back mx-2" role="button">Back</a>
                    <button type="submit" class="btn btn-update mx-2">Update</button>
                </div>
            </div>
        </form>
    }
</div>
