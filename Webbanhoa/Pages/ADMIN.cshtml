@page
@model HoaHoeHoaSoi.Pages.ADMINModel
@{
    ViewData["Title"] = "Login";
}


<style>
    /* Tùy chỉnh nền màu thành hồng */
    body {
        background-color: #F6D8DC; /* Mã hex của màu hồng */
    }

    /* Tùy chỉnh nút Log In */
    input[type="submit"] {
        background-color: red;
        color: white;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: darkred;
        }

    /* Tùy chỉnh khoảng cách giữa các phần tử */
    .form-group {
        margin-bottom: 20px;
    }

    /* Tùy chỉnh định dạng của lỗi */
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        margin-top: 20px;
    }
</style>


<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h1 class="font-weight-bold text-center mb-4" style="color:darkred">Sign In</h1>
                        </div>
                        <form method="post">
                            <div class="form-group">
                                <label class="font-weight-bold" for="username">Username</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold" for="password">Password</label>
                                <input type="password" name="password" class="form-control" id="password" required>
                            </div>
                            <div class="text-center">
                                <input style="background-color: darkred" type="submit" value="Log In" class="btn btn-block">
                            </div>
                            @if (TempData["Error"] != null) {
                                <p style="color: darkred;">@TempData["Error"]</p>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
