@page "{id}"
@model HoaHoeHoaSoi.Pages.ViewProductModel
@{
}

<style>
    .info-left {
        display: flex;
        justify-content: center; /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        width: 50%;
    }

    .info-right {
        justify-content: center;
        padding: 2vw;
        width: 50%;
    }

    .button {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        border:none;
        padding: 0.5vw 1vw 0.5vw 1vw;
        border-radius: 100px;
        background-color: #9D1030;
        color: white;
    }

    .product_name {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2.5vw;
        color: #9D1030
    }

    .product_detail {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color: #9D1030;
    }

    .product-price {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color: #9D1030;
        font-size: 2vw;
    }


</style>

<div class="contai'ner-fluid text-white" style=" background-color: #F6D8DC; ">
    <div class="container" style=" padding: 2vw 10vw 2vw 10vw ;display: flex; ">
        @if(Model.Product == null)
        {
            <h2 class="product_name">Product not found</h2>
        }
        else
        {
            <div class="info-left">
                <div style="max-width:75%">
                    @if (!string.IsNullOrEmpty(Model.Product.Img))
                    {
                        <img id="product-pic" src="data:image/jpeg;base64, @Model.Product.Img" style="max-width: 90%; max-height: 90%">
                    }
                    else
                    {
                        <img class="product-pic" src="/Picture/Hoa.png" style="max-width: 90%; max-height: 90%" />
                    }
                </div>
            </div>
            <div class="info-right">
                <p class="product_name"><b>@Model.Product.Name</b></p>
                <p class="product-price"><b>$@Model.Product.Price</b></p>
                <p class="product_detail">
                    @Model.Product.Description
                </p>
                <br>
                <div>
                    <form method="post" asp-page-handler="AddToCart">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                        <button type="submit" class="button" style="">
                            Add to cart
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>