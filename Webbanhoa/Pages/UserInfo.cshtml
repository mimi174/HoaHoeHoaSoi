@page "{id}"
@model HoaHoeHoaSoi.Pages.UserInfoModel 
@{
    ViewData["Title"] = "Information";
}


<style>
    .underlist {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 1.6vw;
        list-style-type: none;
        margin: 1vw 0.5vw 0.5vw;
        padding: 0;
        width: 10%;
        position: fixed;
        height: 100%;
        overflow: auto
    }

    li a {
        color: #9D1030;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        display: block;
        padding: 8px 16px;
        text-decoration: none;
    }
/*
    li a.active {
        color: white;
    }

    li a:hover:not(.active) {
        background-color: #9D1030;
        color: white;
    }*/

    .form-control {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        border-color: #9D1030;
        padding: 0.5vw 1vw 0.5vw 1vw;
        border-radius: 100px;
    }

    .row{
        padding: 1vw 0vw 1vw 0vw;
    }

    .btn {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        border-color: #9D1030;
        padding: 0.5vw 1vw 0.5vw 1vw;
        border-radius: 100px;
        background-color: #9D1030;
        color: white;
    }

</style>

        @*<a href="/Index" class=" btn btn-outline-success" style="border-radius:5vw; float:right">Log out</a>*@


<div style="background-color: #F6D8DC; color: #9D1030;">
    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post">
        <div class="container" style=" padding: 2vw 10vw 2vw 10vw">
            <div >
                <div class="row row-cols-2">
                    <div class="col col-4">
                        <div class="box py-4">
                            <div class="row">
                                <img src="https://cdn.sforum.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" class="img-thumbnail" alt="Beatles" style="width:auto;">
                            </div>
                            <br />
                            <div class="row">
                                <button type="button" class="btn btn-outline-success">
                                    Avatar
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col col-8 ps-5" style="width: 50%; justify-content: center; margin-left: auto; ">
                        <div class="box">
                            <div class="row">
                                <input type="hidden" name="id" value="@Model.userInfo.Id" />
                                <span class="fName"><b>Name</b></span>
                                <input id="fname" name="fName" type="text" class="form-control" value="@Model.userInfo.Name" placeholder="First Name..">
                            </div>
                            <div class="row row-cols-3">
                                <div class="col col-5 px-0">
                                    <span class="Users">Birthday</span>
                                    <input type="date" id="birthDay" name="birthDay" value="@(Model.userInfo.DOB)">
                                </div>
                                <div class="col col-2"></div>
                                <div class="col col-5 px-0">
                                    <span class="Users">Gender</span>
                                    <select id="gender" name="gender">
                                        @*@{
                                            // Kiểm tra xem giá trị từ cơ sở dữ liệu có tồn tại không
                                            if (Model.userInfo.Gender != null && Model.userInfo.Gender == "Female")
                                            {
                                                <option value="@Model.userInfo.Gender" selected>@Model.userInfo.Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Other">Other...</option>
                                            }
                                            else if (Model.userInfo.Gender != null && Model.userInfo.Gender == "Male")
                                            {
                                                <option value="@Model.userInfo.Gender" selected>@Model.userInfo.Gender</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other...</option>
                                            }
                                            else if (Model.userInfo.Gender != null && Model.userInfo.Gender != "Male" && Model.userInfo.Gender != "Female")
                                            {
                                                <option value="@Model.userInfo.Gender" selected>@Model.userInfo.Gender</option>
                                                <option value="Female">Female</option>
                                                <option value="Male">Male</option>
                                            }
                                        }*@
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <span class="Users">Email</span>
                                <input id="email" name="email" type="text" class="form-control" value="@Model.userInfo.Mail" >
                            </div>
                            <br />
                            <div class="row">
                                <span class="Users">Password</span>
                                <input id="pass" name="pass" type="password" class="form-control" value="@Model.userInfo.Password">
                            </div>
                            <br />
                            <div class="row">
                                <span class="Users">Phone</span>
                                <input id="phone" name="phone" type="text" class="form-control" value="@(Model.userInfo.Phone == " " ? "" : Model.userInfo.Phone)">
                            </div>
                            <br />
                            <div class="row">
                                <span class="Users">Address</span>
                                <input id="address" name="address" type="text" class="form-control" value="@(Model.userInfo.Address == " " ? "" : Model.userInfo.Address)">
                            </div>
                            <br />
                            <div class="row mb-3">
                                <div class="col-sm-4 d-grid">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                                <div class="col-sm-4 d-grid">
                                    <a class="btn btn-outline-success" href="/Users/Infor?id=@Model.userInfo.Id" role="button">Cancel</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>